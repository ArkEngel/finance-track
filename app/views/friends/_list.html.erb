<div class="row">
  <div class="col-9">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Stocks Followed</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <th scope="row"><%= friend.first_name %></th>
            <td><%= friend.last_name %></td>
            <td>
              <% friend.stocks.each do |stock| %>
              <%= stock.ticker %>
              <% end %>
            </td>
            <td><%= link_to 'Unfriend', friendship_path(friend), method: :delete, data: {confirm: 'Unfriend?'},
                                          class: 'btn btn-sm btn-warning' %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

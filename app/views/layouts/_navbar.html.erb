<nav class="navbar navbar-expand-lg navbar-dark bg-dark"">
  <div class="container">
      <%= link_to "Finance-Tracker", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= 'active' if request.path ==my_portfolio_path %>">
            <%= link_to "My Portfolio", my_portfolio_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Profile
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                <%= fa_icon "edit"%> Edit Profile
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to friends_path, class: "dropdown-item" do %>
                <%= fa_icon "users" %> Friends
              <% end %>
            </div>
          </li>
        </ul>
          <%= form_tag search_friend_path, remote: true, class: "form-inline my-2 my-lg-0", method: :get do %>
            <%= text_field_tag :friend, params[:friend], placeholder: "Find other users", autofocus: true, class: "form-control mr-sm-2" %>
              <%= button_tag type: :submit, class: "btn btn-outline-success my-2 my-sm-0" do %>
                <%= fa_icon 'search' %>
              <% end %>
          <% end %>
        <ul class="navbar-nav mr-auto log-out-btn">
          <li class="nav-item">
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          </li>
          <li class="nav-item user-name">
            <%= fa_icon 'user'%> <%= current_user.full_name %>
            </li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
